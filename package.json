{
  "name": "harvestguard",
  "version": "1.0.0",
  "description": "HarvestGuard - Crop Protection Platform for Farmers",
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "start:backend": "cd backend && npm start",
    "build:frontend": "cd frontend && npm run build",
    "db:setup": "cd backend && psql $DATABASE_URL -f db/schema.sql"
  },
  "keywords": ["agriculture", "farming", "crop-management", "bangladesh"],
  "license": "MIT"
}
